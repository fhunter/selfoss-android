<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="MenuSectionText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">12dp</item>
		<item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hint</item>
	</style>

	<style name="MenuSectionDivider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
		<item name="android:background">@color/divider</item>
	</style>

    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <item name="ptrProgressBarColor">@android:color/white</item>
        <item name="ptrProgressBarStyle">inside</item>
    </style>

	<style name="WorkflowBar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">64dp</item>
		<item name="android:background">@color/workflowBar</item>
	</style>

	<style name="WorkflowBar.Item">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:minWidth">96dp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textSize">20sp</item>
		<item name="android:background">?selectableItemBackgroundBorderless</item>
	</style>
</resources>
