        <item name="android:textSelectHandleLeft">@drawable/selfoss_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/selfoss_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/selfoss_text_select_handle_middle</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/selfoss_btn_check_holo_light</item>
        <item name="android:buttonStyle">@style/ButtonSelfoss</item>
        <item name="android:imageButtonStyle">@style/ImageButtonSelfoss</item>
        <item name="android:dropDownSpinnerStyle">@style/SpinnerSelfoss</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarSelfoss</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/selfoss_list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/selfoss_activated_background_holo_light</item>
        <!-- End of generated -->

        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow.Selfoss</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_homeasupindicator</item>

        <item name="android:selectableItemBackground">@drawable/selectable_background_selfoss</item>
		<item name="selectableItemBackground">?android:selectableItemBackground</item>
		<item name="selectableItemBackgroundBorderless">@drawable/selectable_background_selfoss</item>

	</style>

	<style name="Theme.Selfoss.Article" parent="Theme.Selfoss">
		<item name="android:windowContentOverlay">@null</item>
	</style>

    <!-- File created by the Android Action Bar Style Generator -->
    <style name="ActionBar.Solid.Selfoss" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_selfoss</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_selfoss</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_selfoss</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Selfoss</item>
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
    </style>

    <style name="ActionBar.Transparent.Selfoss" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_selfoss</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Selfoss</item>
    </style>

    <style name="PopupMenu.Selfoss" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_selfoss</item>
    </style>

    <style name="DropDownListView.Selfoss" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_selfoss</item>
    </style>

    <style name="ActionBarTabStyle.Selfoss" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_selfoss</item>
    </style>

    <style name="DropDownNav.Selfoss" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_selfoss</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_selfoss</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_selfoss</item>
    </style>

    <style name="ProgressBar.Selfoss" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_selfoss</item>
    </style>

    <style name="ActionButton.CloseMode.Selfoss" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_selfoss</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Selfoss.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Selfoss</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Selfoss</item>
    </style>
    <!-- End of generated -->

    <!-- Generated with http://android-holo-colors.com -->
    <style name="ButtonSelfoss" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/selfoss_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonSelfoss" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/selfoss_btn_default_holo_light</item>
    </style>

    <style name="SpinnerSelfoss" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/selfoss_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/selfoss_list_selector_holo_light</item>
    </style>

    <style name="ProgressBarSelfoss" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/selfoss_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/selfoss_progress_indeterminate_horizontal_holo_light</item>
    </style>
    <!-- End of generated -->


    <style name="ActionBar.Title.Selfoss" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionButton.Overflow.Selfoss" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

	<style name="Theme.Selfoss.New" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/main_color</item>
		<item name="colorPrimaryDark">@color/main_color_dark</item>
		<item name="colorAccent">@color/main_color_accent</item>
	</style>

</resources>